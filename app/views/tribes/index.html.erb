<div class="container">
  <div class="row">
    <% @tribes.each do |tribe| %>
      <div class="col s12 m6 l6">

      <div class="card medium">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="assets/<%= tribe.image_path %>">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= tribe.name %><i class="material-icons right">open</i></span>
          <!--<p><a href="#">This is a link</a></p>-->
          <p><%= link_to "view this tribe", tribe %></p>
            <p>featured skill : <%= tribe.users.first.skills.sample.name %></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= tribe.name %><i class="material-icons right">close</i></span>
          <p><%= tribe.story %></p>
        </div>
      </div>
      </div>
      <% end %>
    </div>
</div>

