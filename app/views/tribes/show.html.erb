<body>




<%#= image_tag @tribe.avatar.url %>
<%#= image_tag @tribe.avatar.url(:medium) %>
<%#= image_tag @tribe.avatar.url(:thumb) %>

<%#= image_tag @tribe.avatar.url(:square) %>






<div class="intro green lighten-1 z-depth-1">
  <h1 class="grey-text text-lighten-5"><%= @tribe.name %></h1>
  <h5 clas="grey lighten-4 grey-text text-darken-1">we write code</h5>
</div>

<div class="container about">
  <h5>Ruby Developers</h5>
  <h6>with a passion for excellence, and other stuff too</h6>
  <hr>
  <div class="row">
    <div class="col s12 m4 l4">
      <h6>Story</h6>
      <p><%= @tribe.story %> </p>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
    </div>
    <div class="col s12 m4 l4">
      <h6>Members</h6>
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <img class="circle" src="/assets/drew_profile.jpg" width="64" height="64">
          <p>These are all the great people who are a part of this tribe Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore.</p>
        </div>
        <div class="card-action">
          <a href="#">Link</a>
          <a href='#'>Link</a>
        </div>
      </div>
    </div>
    <div class="col s12 m4 l4">
      <h6>skill set</h6>
      <ul class="collapsible">
        <% @skills.each do |skill| %>
        <li class="active">
          <div class="collapsible-header"><i class="mdi-editor-format-align-justify"></i><%= skill.name %></div>
        </li>
          <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="row center-align teal lighten-2">
  <h5><%= link_to "Join our tribe", new_tribe_user_path(tribe_id: @tribe.id), class: "center white-text z-depth-3 lighten-2"%></h5>
</div>

<div class="container">
  <div class="row">
    <div class="card-panel hoverable center-align">Jobs that your tribe can apply to</div>

    <% @alljobs.each do |job| %>
      <div class="col s12 m12 l12">
        <div class="card">
          <div class="card-content">
            <%= job.name %>
          </div>
          <div class="card-content">
            <%= job.description %>
          </div>
          <div class="card-action">
            <a href="<%= job.link %>">click here to see the job</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



<div class="container portfolio">
  <h5>portfolio</h5>
  <h6>OUR LATEST PROJECTS</h6>
  <hr>
  <div class="row">
    <div class="col s12 m12 l12 portfolio-holder">
      <img class="materialboxed" src="http://labs.qnimate.com/portfolio-materialize/images/project.png">
      <img class="materialboxed" src="http://labs.qnimate.com/portfolio-materialize/images/project.png">
      <img class="materialboxed" src="http://labs.qnimate.com/portfolio-materialize/images/project.png">
      <img class="materialboxed" src="http://labs.qnimate.com/portfolio-materialize/images/project.png">
      <img class="materialboxed" src="http://labs.qnimate.com/portfolio-materialize/images/project.png">
      <img class="materialboxed" src="http://labs.qnimate.com/portfolio-materialize/images/project.png">
    </div>
  </div>
</div>
<div class="container contact">
  <h5>contact</h5>
  <h6>get in touch with us</h6>
  <hr>
  <div class="row">
    <div class="col s12 m6 l6">
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input id="first_name" type="text" class="validate">
              <label for="first_name">First Name</label>
            </div>
            <div class="input-field col s6">
              <input id="last_name" type="text" class="validate">
              <label for="last_name">Last Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="email" type="email" class="validate">
              <label for="email">E-Mail</label>
            </div>
          </div>
          <textarea class="materialize-textarea" placeholder="Your Message" required></textarea>
          <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="mdi-content-send right"></i>
          </button>
        </form>
      </div>
    </div>
    <div class="col s12 m6 l6 contact-holder">
      <h6 class="mdi-action-home">Headquarters Address</h6>
      <p><%= @tribe.address %></p>
      <h6 class="mdi-hardware-phone-android">Phone Number</h6>
      <p><%= @tribe.phone %></p>
      <h6 class="mdi-action-open-in-browser">Website</h6>
      <p>another cool porfolio site</p>
    </div>
  </div>
</div>
<footer>
  <div class="footer-copyright">
    <div class="container">
      Â© 2015 Copyright Text
      <a class="grey-text text-lighten-4 right" href="#!">Link</a>
    </div>
  </div>
  <div class="row center-align teal lighten-2">
    <h5><%= link_to "Join our tribe", new_tribe_user_path(tribe_id: @tribe.id), class: "center white-text z-depth-3 lighten-2"%></h5>
  </div>
</footer>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src='https://cdn.rawgit.com/Dogfalo/materialize/master/dist/js/materialize.min.js'></script>

<script src="js/index.js"></script>

<div class="intro green lighten-1 z-depth-1"></div>



</body>

